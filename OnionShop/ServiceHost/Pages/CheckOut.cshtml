@page
@using ShopManagement.ApplicationContract
@using _0_Framework.Application
@model ServiceHost.Pages.CheckOutModel
@{
}
<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">تایید نهایی سبد خرید</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li>
                                <a asp-page="/Index">صفحه اصلی</a>
                            </li>
                            <li class="active">تایید نهایی سبد خرید</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!--=======  page wrapper  =======-->
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <form method="post">
                            <div class="cart-table table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th class="pro-thumbnail">عکس</th>
                                            <th class="pro-thumbnail">محصول</th>
                                            <th class="pro-title">قیمت واحد</th>
                                            <th class="pro-price">تعداد</th>
                                            <th class="pro-quantity">مبلغ کل بدون تخفیف</th>
                                            <th class="pro-quantity">درصد تخفیف</th>
                                            <th class="pro-subtotal">مبلغ کل تخفیف</th>
                                            <th class="pro-remove">مبلغ پس از تخفیف</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       @foreach (var cartItem in Model.Cart.Items)
                                        {
                                            <tr>
                                                <td class="pro-thumbnail">
                                                    <a href="single-product.html">
                                                        <img src="~/ProductPictures/@cartItem.Picture" class="img-fluid"
                                                             alt="Product">
                                                    </a>
                                                </td>
                                                <td class="pro-title">
                                                    
                                                        @cartItem.Name
                                                </td>
                                                <td class="pro-price">
                                                    <span>@cartItem.UnitPrice.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-price">
                                                    <span>@cartItem.Count</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>@cartItem.TotalItemPrice.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>@cartItem.DiscountRate %</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>@cartItem.DiscountItemAmount.ToMoney() تومان</span>
                                                </td>
                                                <td class="pro-subtotal">
                                                    <span>@cartItem.PayItemAmount.ToMoney() تومان</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        

                        <div class="row">
                            <div class="col-lg-6 col-12 d-flex">
                                <div class="checkout-payment-method">
                                    <h4>نحوه پرداخت</h4>
                                    @foreach (var method in PaymentMethod.GetList())
                                    {
                                        <div class="single-method">
                                            <input type="radio" id="payment_@method.Id" name="paymentMethod" value="@method.Id" @(PaymentMethod.GetList().First().Id == method.Id ? "checked" : "")>
                                            <label for="payment_@method.Id">@method.Name</label>
                                            <p data-method="@method.Id" style="display:@(PaymentMethod.GetList().First().Id == method.Id ? "block" : "none")">@method.Description</p>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col-lg-6 col-12 d-flex">
                                <div class="cart-summary">
                                    <div class="cart-summary-wrap">
                                        <h4>خلاصه وضعیت فاکتور</h4>
                                        <p>مبلغ نهایی <span>@Model.Cart.Amount.ToMoney() تومان</span></p>
                                        <p>مبلغ تخفیف <span>@Model.Cart.DiscountAmount.ToMoney() </span></p>
                                        <h2>مبلغ قابل پرداخت <span>@Model.Cart.PayAmount.ToMoney() </span></h2>
                                    </div>
                                    <div class="cart-summary-button">
                                        <button class="btn btn-success" asp-page-handler="Pay">پرداخت</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
