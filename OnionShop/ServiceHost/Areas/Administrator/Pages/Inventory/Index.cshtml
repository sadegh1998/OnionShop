@page
@using InventoryManagement.Configuration.Permissions
@model ServiceHost.Areas.Administrator.Pages.Inventory.IndexModel
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "تعریف انبار جدید";
}


<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a Permission="InventoryPermission.CreateInventory" class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد انبار جدید</a>
        </p>
    </div>
</div>

<div class="row" Permission="InventoryPermission.SearchInventories">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <p class="panel-title">جستجو در انبارها</p>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">

                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.ProductId"></label>
                        <select class="form-control" asp-for="SearchModel.ProductId" asp-items="Model.Products">

                            <option value="0">محصولات...</option>

                        </select>
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv" Permission="InventoryPermission.ListInventories">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست گروه محصولات</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>محصول</th>
                                    <th>مبلغ</th>
                                    <th>موجودی انبار</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Inevtories)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Product</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.CreationDate</td>
                                        <td>@item.CurrentCount</td>
                                        <td>
                                            <a Permission="InventoryPermission.EditInventory" class="btn btn-warning pull-right m-rl-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                            <a Permission="InventoryPermission.Increase" class="btn btn-success pull-right m-rl-5"
                                               href="#showmodal=@Url.Page("./Index", "Increase", new { id = item.Id})">
                                                <i class="fa fa-plus"></i> افزایش موجودی
                                            </a>
                                            <a Permission="InventoryPermission.Reduce" class="btn btn-danger pull-right m-rl-5"
                                                   href="#showmodal=@Url.Page("./Index", "Reduce", new { id = item.Id})">
                                                <i class="fa fa-minus"></i> کاهش موجودی
                                            </a>
                                            <a Permission="InventoryPermission.Operations" class="btn btn-primary pull-right m-rl-5"
                                               href="#showmodal=@Url.Page("./Index", "OperationLogs", new { id = item.Id})">
                                                <i class="fa fa-recycle"></i> گردش انبار
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}